  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${file}",
      "env": {},
      "args": ["${input:inputFile}"],
      "showLog": true
    }
  ],
  "inputs": [
    {
        "id": "inputFile",
        "type": "promptString",
        "default": "example.txt",
        "description": "The input file for the program",
        "password": false
    }
  ]
}
